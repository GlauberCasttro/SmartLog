{
  
    "Logging": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "System": "Warning"
      }
    
  },
  "AllowedHosts": "*",

  // 1. SEÇÃO DE CONFIGURAÇÃO DA SUA SDK
  "smartLog-dev": {
    "CircularBufferSize": 1000, //buffer para analise temporal, quantos erros aconteceu nos ultimos x minutos (LogWindowSeconds)
    "EconomyLevel": "Error", //Log atual, nivel de economia
    "HighVerbosityLevel": "Information", //Verbosidade que a SDK pode descer automaticamente
    "DetectionInterval": "00:00:10", // Intervalo de detecção do servico do detector
    "MinimumHighVerbosityDurationInMinute": 1, // Tempo minimo que a SDK deve permanecer em alta verbosidade
    "AbsoluteErrorThreshold": 15, // Quantidade absoluta de erros para subir a verbosidade, deixar mais verboso, error -> information por exemplo
    "LogWindowSeconds": 60, // Janela de tempo para analise dos erros para mudar a verbosidade automaticamente
    "EnableRedisChannelListener": true, // Habilitar o listener de canal redis para sincronização entre instancias
    "LoadWorkerSincronizedInMinute": 5 // Intervalo de sincronização entre instancias via redis pelo worker, caso alguma pod tenha perdido o evento de alteração
  },
  "smartLog-prd": {
    "CircularBufferSize": 1000,
    "EconomyLevel": "Error",
    "HighVerbosityLevel": "Information",
    "DetectionInterval": "00:00:10",
    "MinimumHighVerbosityDurationInMinute": 1,
    "AbsoluteErrorThreshold": 10,
    "LogWindowSeconds": 60,
    "EnableRedisChannelListener": true,
    "LoadWorkerSincronizedInMinute": 5
  },

  //2. SEÇÃO DE STRINGS DE CONEXÃO
  "ConnectionStrings": {
    // Chave específica que a SDK procura para se conectar ao Redis
    "Redis": "localhost:6379"
  }


  //// Seção opcional do Serilog que pode ser usada pelo seu Program.cs
  //"Serilog": {
  //  "MinimumLevel": {
  //    "Default": "Information",
  //    "Override": {
  //      "Microsoft": "Warning",
  //      "System": "Warning"
  //    }
  //  }
  //}
}